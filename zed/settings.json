// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "features": {
        "edit_prediction_provider": "none"
    },
    "collaboration_panel": {
        "dock": "right"
    },
    "outline_panel": {
        "dock": "right"
    },
    "git_panel": {
        "dock": "right"
    },
    "project_panel": {
        "dock": "right"
    },
    "ssh_connections": [
        {
            "host": "winstonallo-89.58.63.247",
            "projects": [
                {
                    "paths": ["/home/winstonallo/mastery/taskmaster"]
                },
                {
                    "paths": ["/home/winstonallo/qms/src/wasm"]
                }
            ]
        }
    ],
    "diagnostics": {
        "button": true,
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 0
        },
        "cargo": {
            "fetch_cargo_diagnostics": true
        }
    },
    "lsp": {
        "rust-analyzer": {
            "binary": {
                "ignore_system_version": false
            },
            "enable_lsp_tasks": true,
            "initialization_options": {
                "checkOnSave": true,
                "diagnostics": {
                    "enable": true,
                    "experimental": {
                        "enable": true
                    }
                }
            }
        }
    },
    "tab_size": 4,
    "autosave": "on_focus_change",
    "agent": {
        "inline_assistant_model": null,
        "version": "2",
        "enabled": false
    },
    "vim_mode": true,
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "One Dark"
    }
}
